<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.heng.kotlinlimitscrollapplication">

    <application
        android:name=".KnApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:resizeableActivity="false"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="n">

        <meta-data
            android:name="android.max_aspect"
            android:value="2.4" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RecyclerViewIndexActivity"
            android:label="@string/title_activity_recycler_view_index"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.heng.kotlinlimitscrollapplication.open_activity_action" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TestAopActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>